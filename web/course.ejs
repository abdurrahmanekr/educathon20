            <h2 class="section-title">More Courses</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="site-section courses-entry-wrap"  data-aos="fade" data-aos-delay="100">
      <div class="container">
        <div class="row">

          <div class="owl-carousel col-12 nonloop-block-14">

            <% courses.forEach(x => { %>
                <div class="course bg-white h-100 align-self-stretch">
                  <figure class="m-0">
                    <a href="/course/<%=x.id;%>"><img src="/public/images/img_<%=x.id;%>.jpg" alt="Image" class="img-fluid"></a>
                  </figure>
                  <div class="course-inner-text py-4 px-4">
                    <span class="course-price"><%=x.price;%></span>
                    <div class="meta"><span class="icon-clock-o"></span><%=x.info;%></div>
                    <h3><a href="/course/<%=x.id;%>"><%=x.name;%></a></h3>
                    <p><%=x.description;%></p>
                  </div>
                  <div class="d-flex border-top stats">
                    <div class="py-3 px-4"><span class="icon-users"></span> <%=x.student;%> öğrenci</div>
                    <div class="py-3 px-4 w-25 ml-auto border-left"><span class="icon-chat"></span> <%=x.comment;%></div>
                  </div>
                </div>
            <% }); %>

          </div>



        </div>
        <div class="row justify-content-center">
